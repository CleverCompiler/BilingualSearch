<Window x:Class="BilingualSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BilingualSearch"
        mc:Ignorable="d"
        Title="BilingualSearch" Height="278.617" Width="453.883">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*"/>
            <RowDefinition Height=".25*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Enter a Word to Search for."/>
                <TextBox x:Name="txtSearch" MinWidth="75"/>
            </StackPanel>
            <Button Content="Search" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
